@page "/locations/edit/{Id:int}"

@if (Location == null)
{
	<b>Местоположение не существует!</b>
}
else
{
	<div style="width: 640px;display: block;margin-left: auto;margin-right: auto; margin-bottom: 4rem;">
		<h4 class="mb-4">Изменить информацию о местоположении</h4>

		@if (EndEdit)
		{
			<div class="alert @(SuccessEdit ? "alert-success" : "alert-danger") mb-4" role="alert">
			  <b>@(SuccessEdit ? "Отлично!" : "Ошибка!")</b> <br>
			  @(SuccessEdit ? "Вы успешно изменили информацию о местоположении!" : "При изменении информации о местоположении что-то пошло не так...")
			</div>
		}

		<div class="form-group mb-4">
			<label>Название</label>
			<input class="form-control" @bind="@Location.Name">
		</div>

		<div class="form-group mb-4">
			<label>Адрес</label>
			<input class="form-control" @bind="@Location.Address">
		</div>

		<div class="form-group mb-4">
			<label>Комментарий (необязательно)</label>
			<input class="form-control" @bind="@Location.Comment">
		</div>

		<div>
			<button type="submit" class="btn btn-success" @onclick=@EditLocation disabled="@(EndEdit && SuccessEdit)">Сохранить</button>
		</div>
	</div>
}


