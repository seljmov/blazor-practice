@page "/products/add"

<div style="width: 640px;display: block;margin-left: auto;margin-right: auto; margin-bottom: 4rem;">
	<h4 class="mb-4">Добавить новый продукт</h4>

	<div class="form-group mb-4">
		<label>Название</label>
		<input class="form-control" @bind="@Name">
	</div>

	<div class="form-group mb-4">
		<label>Описание (необязательно)</label>
		<input class="form-control" @bind="@Description">
	</div>

    <div class="form-group mb-4">
        <label>Материалы (необязательно)</label>
        <BlazoredTypeahead 
                            SearchMethod="@SearchProduct" 
                            EnableDropDown="true"
                            ShowDropDownOnFocus="true"
                            @bind-Values="@SelectedProducts" 
                            Placeholder="Укажите один и более материалов...">
            <SelectedTemplate>
                @context.Name
            </SelectedTemplate>
            <ResultTemplate>
                @context.Name
            </ResultTemplate>
            <NotFoundTemplate>
                Ничего не найдено.
            </NotFoundTemplate>
        </BlazoredTypeahead>
    </div>
</div>


