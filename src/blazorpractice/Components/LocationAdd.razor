@page "/locations/add"

<div style="width: 640px;display: block;margin-left: auto;margin-right: auto; margin-bottom: 4rem;">
	<h4 class="mb-4">Добавить новое местоположение</h4>

	@if (EndCreated)
    {
        <div class="alert @(SuccessCreated ? "alert-success" : "alert-danger") mb-4" role="alert">
          <b>@(SuccessCreated ? "Отлично!" : "Ошибка!")</b> <br>
          @(SuccessCreated ? "Вы успешно создали новое местоположение!" : "При создании нового местоположения что-то пошло не так. Информация была добавлена частично либо не добавлена вовсе...")
        </div>
    }

	<div class="form-group mb-4">
		<label>Название</label>
		<input class="form-control" @bind="@Name">
	</div>

	<div class="form-group mb-4">
		<label>Адрес</label>
		<input class="form-control" @bind="@Address">
	</div>

	<div class="form-group mb-4">
		<label>Комментарий (необязательно)</label>
		<input class="form-control" @bind="@Comment">
	</div>

	<div>
        <button type="submit" class="btn btn-success" @onclick=@CreateLocation disabled="@(EndCreated && SuccessCreated)">Сохранить</button>
    </div>
</div>


