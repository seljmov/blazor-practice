<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">ASTU:Предприятие</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Предприятия
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/locations" Match="NavLinkMatch.All">
                <span class="oi oi-location" aria-hidden="true"></span> Местоположения
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/products" Match="NavLinkMatch.All">
                <span class="oi oi-briefcase" aria-hidden="true"></span> Продукты
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/owners" Match="NavLinkMatch.All">
                <span class="oi oi-person" aria-hidden="true"></span> Владельцы
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
